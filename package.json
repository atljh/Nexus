{
  "name": "nexus",
  "version": "1.0.0",
  "description": "Desktop app for Telegram automation",
  "main": "dist-electron/main/index.js",
  "author": "Nexus",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "build:win": "vue-tsc --noEmit && vite build && electron-builder --win",
    "build:mac": "vue-tsc --noEmit && vite build && electron-builder --mac",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.ts,.tsx",
    "typecheck": "vue-tsc --noEmit"
  },
  "dependencies": {
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "pinia": "^2.3.0",
    "pinia-plugin-persistedstate": "^4.1.3",
    "primevue": "^4.2.5",
    "@primevue/themes": "^4.2.5",
    "primeicons": "^7.0.0",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "vite": "^6.0.5",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^2.1.10",
    "typescript": "^5.7.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "@types/node": "^22.10.2",
    "tailwindcss": "^3.4.17",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49"
  },
  "build": {
    "appId": "com.nexus.app",
    "productName": "Nexus",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron",
      "dist"
    ],
    "extraResources": [
      {
        "from": "backend-dist",
        "to": "backend",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "resources/icons/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "resources/icons/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
